include /resources/pug/mixins/form

form(ng-submit="modal.submit()")
  .modal-header
    button.close(
      type="button"
      ng-click="modal.$dismiss()"
    ) &times;

    h4.modal-title(translate="hardware.server.modal.wipe.TITLE")

  .modal-body(ng-init="itemCount = ('hardware.server.modal.suspend.ACTION_COUNT' | translate)")
    p(translate="hardware.server.modal.wipe.BODY")

    ul(ng-init="items = _.range(0, itemCount)")
      li(
        ng-repeat="item in items track by $index"
        translate="hardware.server.modal.wipe.ACTIONS.{{$index}}"
      )
    p(translate="hardware.server.modal.wipe.CONFIRM")

    ul
      li(
        ng-repeat="server in modal.servers"
        ng-bind="server.name"
      )

  .modal-footer
    button.btn.btn-secondary(
      type="button"
      ng-click="modal.$dismiss()"
      data-translate="hardware.server.modal.wipe.CANCEL"
    )
    button.btn.btn-danger(
      type="submit"
      data-translate="hardware.server.modal.wipe.SUBMIT"
    )
