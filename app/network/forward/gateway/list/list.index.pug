extends /resources/angle/pug/list-page
include /resources/angle/pug/mixins/list

block list
  list.panel.panel-default(list="vm.list")
    list-header(text="forward.gateway.list.TITLE")
      a.btn.btn-default(ng-click="vm.list.scrollToAnchor('forward.gateway-edit-form')")
        i.fa.fa-plus
      a.btn.btn-default(ng-click="vm.list.refresh.now()")
        i.fa.fa-refresh
      a.btn.btn-default(ng-click="vm.filters.visible = !vm.filters.visible")
        i.fa.fa-filter
    forward-gateway-filters(
      show="vm.filters.visible"
      current="vm.filters.current"
      change="vm.filters.change()"
    )
    forward-gateway-table.border-top-table.scrollable-block
    list-footer

block bottom-left
  forward-gateway-create-wizard(form="vm.create")

block bottom-right
  logs(
    heading="Forward Gateway Logs"
    filter="vm.logs.filter"
    listen-to="vm.list"
  )
