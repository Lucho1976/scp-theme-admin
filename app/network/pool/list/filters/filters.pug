include /resources/angle/pug/mixins/form

.panel-body.form-horizontal(ng-show="filters.show")
  .row
    .col-md-6
      +label("{{ 'pool.list.filter.search.LABEL' | translate }}")
        +search-field()(
          ng-model="filters.current.q"
          ng-change="filters.fireChangeEvent()"
          placeholder="{{ 'pool.list.filter.search.PLACEHOLDER' | translate }}"
          observable-focus="filters.searchFocus"
        )
      +label("{{ 'pool.list.filter.client.LABEL' | translate }}")
        +input-with-btn("fa fa-times-circle")(ng-click="filters.client.clear()")
          +ui-select("filters.client")
            ui-select-match(placeholder="{{ 'pool.list.filter.client.PLACEHOLDER' | translate }}")
              span(ng-bind="$select.selected.name")

            +ui-select-choices("filters.client")
              span(ng-bind-html="choice.name | highlight: $select.search")
    .col-md-6
      +label("{{ 'pool.list.filter.group.LABEL' | translate }}")
        +input-with-btn("fa fa-times-circle")(ng-click="filters.group.clear()")
          +ui-select("filters.group")
            ui-select-match(placeholder="{{ 'pool.list.filter.group.PLACEHOLDER' | translate }}")
              span(ng-bind="$select.selected.name")

            +ui-select-choices("filters.group")
              span(ng-bind-html="choice.name | highlight: $select.search")
