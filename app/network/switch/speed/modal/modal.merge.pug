include /resources/angle/pug/mixins/form

form(ng-submit="modal.submit()")
  .modal-header
    button.close(
      type="button"
      ng-click="modal.$dismiss()"
    ) &times;

    h4.modal-title Merge Port Speed

  .modal-body.form-horizontal
    +label("{{ 'speed.modal.merge.speed.LABEL' | translate }}")
      +ui-select("modal.speed")
        ui-select-match(placeholder="{{ 'speed.modal.merge.speed.PLACEHOLDER' | translate }}")
          | {{ $select.selected.name }}

        +ui-select-choices("modal.speed")
          span(ng-bind-html="choice.name | highlight: $select.search")

  .modal-footer
    button.btn.btn-secondary(
      type="button"
      ng-click="modal.$dismiss()"
    ) Cancel
    button.btn.btn-primary(type="submit") Merge
