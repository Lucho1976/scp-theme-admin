doctype html
include /resources/angle/pug/mixins/form

+field("{{ 'pxe.dhcp.form.name.LABEL' | translate }}", "name")(
  placeholder="{{ 'pxe.dhcp.form.name.PLACEHOLDER' | translate }}"
  ng-model="pxeDhcpForm.input.name"
)

+field("{{ 'pxe.dhcp.form.host.LABEL' | translate }}", "name")(
  placeholder="{{ 'pxe.dhcp.form.host.PLACEHOLDER' | translate }}"
  ng-model="pxeDhcpForm.input.http.host"
)

+field("{{ 'pxe.dhcp.form.port.LABEL' | translate }}", "name")(
  placeholder="{{ 'pxe.dhcp.form.port.PLACEHOLDER' | translate }}"
  ng-model="pxeDhcpForm.input.http.port"
)

+label("{{ 'pxe.dhcp.form.https.LABEL' | translate }}")
  +checkbox()(
    ng-model="pxeDhcpForm.input.http.use_https"
  )

+field("{{ 'pxe.dhcp.form.api_key.LABEL' | translate }}", "name")(
  ng-model="pxeDhcpForm.input.http.api_key"
)

