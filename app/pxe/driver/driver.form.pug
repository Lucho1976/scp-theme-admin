doctype html
include /resources/angle/pug/mixins/form

+field("{{ 'pxe.driver.form.name.LABEL' | translate }}", "name")(
  placeholder="{{ 'pxe.driver.form.name.PLACEHOLDER' | translate }}"
  ng-model="pxeDriverForm.input.name"
)

+field("{{ 'pxe.driver.form.path.LABEL' | translate }}", "path")(
  placeholder="{{ 'pxe.driver.form.path.PLACEHOLDER' | translate }}"
  ng-model="pxeDriverForm.input.path"
)

button(type="file" ngf-select="pxeDriverForm.uploadFiles($file, $invalidFiles)"
          ngf-max-height="1000" ngf-max-size="1MB")
	| Select File