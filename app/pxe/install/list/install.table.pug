extends /resources/angle/pug/table

block headings
  th
    span(translate="os-reload.heading.SERVER")
  th
    span(translate="os-reload.heading.PROFILE")
  th
    span(translate="os-reload.heading.PROGRESS")
  th
    span(translate="os-reload.heading.ACTIONS")

block columns
  
  td(
    ng-bind="row.server.name || '-'"
  )
  
  td(
    ng-bind="row.profile.name || '-'"
  )
  
  td
    uib-progressbar.progress-min-text.progress-striped.active(value="row.percent")
      | {{ row.percent }}%
  
  td
    .btn-group.btn-group-xs
      a.btn.btn-default(
        ui-sref="app.hardware.server.view.edit({id: row.id})"
      )
        i.fa.fa-plus
      a.btn.btn-default(
        ng-click="table.list.list.onDelete(row)"
      )
        i.fa.fa-trash