extends /resources/angle/pug/table-checkable

block headings
  th.sortable(ng-if="table.showName") Name
    sort(col="name")
  th.sortable(ng-if="table.showDescription") Description
    sort(col="description")
  th.sortable(ng-if="table.showInstallable") Installable
      sort(col="is_installable")
  th(ng-if="table.showActions") Actions

block columns
  td
    a(
      ui-sref="app.pxe.preseed.view({id: row.id})"
      ng-bind="row.name"
    )
  td(ng-bind="row.description") 
  td
    span.fa.fa-check.text-success(ng-if="row.is_installable")
  td(ng-if="table.showActions")
    .btn-group.btn-group-xs
      a.btn.btn-default(
        ui-sref="app.pxe.preseed.view({id: row.id})"
        translate="app.action.EDIT"
      )
