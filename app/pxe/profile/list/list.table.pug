extends /resources/angle/pug/table-checkable

block headings
    th.sortable(ng-if="table.showName") Name
        sort(col="name")
    th.sortable(ng-if="table.showBilling") Billing ID
        sort(col="billing_id")
    th.sortable(ng-if="table.showClientAccess") Client Access
        sort(col="client_access")
    th(ng-if="table.showActions") Actions

block columns
  td
    a(
      ui-sref="app.pxe.profile.view({id: row.id})"
      ng-bind="row.name"
    )
  td(ng-bind="row.billing_id")
  td
    span.fa.fa-check.text-success(ng-if="row.access_client")
  td(ng-if="table.showActions")
    .btn-group.btn-group-xs
      a.btn.btn-default(
        ui-sref="app.pxe.profile.view({id: row.id})"
        translate="app.action.EDIT"
      )
