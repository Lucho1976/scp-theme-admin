doctype html
include /resources/angle/pug/mixins/form

+field(
  "{{ 'pxe.shell.form.name.LABEL' | translate }}",
  "name"
)(
  placeholder="{{ 'pxe.shell.form.name.PLACEHOLDER' | translate }}"
  ng-model="shellForm.input.name"
)

+field(
  "{{ 'pxe.shell.form.description.LABEL' | translate }}",
  "description"
)(
  placeholder="{{ 'pxe.shell.form.description.PLACEHOLDER' | translate }}"
  ng-model="shellForm.input.description"
)

+textarea(
  "{{ 'pxe.shell.form.body.LABEL' | translate }}",
  "body"
)(
  placeholder="{{ 'pxe.shell.form.body.PLACEHOLDER' | translate }}"
  ng-model="shellForm.input.body"
  rows="20"
)
