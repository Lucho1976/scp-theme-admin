extends /resources/angle/pug/table-checkable

block headings
  th.relative User
    sort(col="user")
  th.relative IP Address
    sort(col="ip")
  th.relative Description
    sort(col="desc")
  th.relative Type
    sort(col="type")
  th.relative Date
    sort(col="created_at")
  th Actions

block columns
  td
    log-user(log="vm.log")
  td(ng-bind="row.ip")
  td(ng-bind="row.desc")
  td
    span(ng-if="row.target")
      | {{ row.target.name }} ({{row.target.singular}})
    span(ng-if="!row.target") -
  td(ng-bind="row.created_at")
  td(ng-if="table.showActions")
    .btn-group.btn-group-xs
      a.btn.btn-default(
        ui-sref="app.system.log.view({id: row.id})"
        translate="app.action.EDIT"
      )
