include /resources/angle/pug/mixins/panel

.row
  .col-md-6
    +panel("Log Overview")
      table.table
        // Add top border
        thead
          tr
            th.border-only(
              colspan="2"
            )
        tbody
          tr
            th Date
            td(ng-bind="vm.log.created_at")
          tr
            th User
            td
              log-user(log="vm.log")
          tr
            th Target
            td
              log-target(log="vm.log")
          tr
            th IP Address
            td(ng-bind="vm.log.ip")
          tr
            th URL
            td(ng-bind="vm.log.url")
          tr(ng-if="vm.log.referrer")
            th Referrer
            td(ng-bind="vm.log.referrer")
          tr
            th Description
            td(ng-bind="vm.log.desc")
          tr(ng-if="vm.log.target")
            th(ng-bind="vm.log.target.singular")
            td(ng-bind="vm.log.target.name")
  .col-md-6
    +panel("Log Data")(
      ng-if="vm.log.data"
    )
      table.table
        thead
          tr
            th.border-only(
              colspan="2"
            )
          tr
            th Key
            th Data
        tbody
          tr(ng-repeat="(key, value) in vm.log.data")
            td(ng-bind="key")
            td(ng-bind="value")
