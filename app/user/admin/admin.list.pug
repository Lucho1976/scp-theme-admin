extends /resources/angle/pug/list-checkable

block title
  | Administrators

block headings
  th.relative Username
    sort(col="username")
  th.relative Email
    sort(col="email")
  th Actions

block columns
  td {{ row.username }}
  td {{ row.email }}
  td
    .btn-group.btn-group-xs
      a.btn.btn-default(ui-sref="app.user.admin.view({id: row.id})")
        | {{ 'app.action.EDIT' | translate }}
