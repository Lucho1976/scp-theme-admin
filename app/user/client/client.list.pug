extends /resources/pug/list-checkable

block title
  | Clients

block headings
  th.relative Name
    sort(col="last")
  th.relative Email
    sort(col="email")
  th Actions

block columns
  td {{ row.name }}
  td {{ row.email }} 
  td
    .btn-group.btn-group-xs
      a.btn.btn-default(ui-sref="app.users.clients.view({id: row.id})")
        | {{ 'app.action.EDIT' | translate }}
