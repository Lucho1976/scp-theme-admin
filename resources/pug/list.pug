list(
  list="vm.list"
)
  list-heading
    block title
  table.table.table-bordered.table-striped.table-condensed.table-hover
    thead
      tr
        block headings-pre
        block headings
    tbody
      tr(
        ng-repeat="row in vm.list.items track by row.id"
        ng-click="row.checked = !row.checked"
      )
        block columns-pre
        block columns
  list-footer
